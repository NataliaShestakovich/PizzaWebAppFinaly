@model PizzaWebAppAuthentication.Models.AppModels.Ingredient
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create Ingredient</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="text" asp-for="Price" class="form-control" lang="en" step="0.01"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PortionGrams" class="control-label"></label>
                <input type="number" asp-for="PortionGrams" class="form-control" lang="en" />
                <span asp-validation-for="PortionGrams" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Availability" class="control-label"></label>
                <div>
                    <input asp-for="Availability" type="checkbox" class="form-check-input" />
                    <label class="form-check-label" asp-for="Availability">Available</label>
                </div>
                <span asp-validation-for="Availability" class="text-danger"></span>
            </div>            

            <div class="form-group">
                <button btn btn-primary>Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

