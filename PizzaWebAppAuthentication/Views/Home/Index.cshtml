@using PizzaWebAppAuthentication.Models.AppModels;
@model IEnumerable<Pizza>
@{
    ViewData["Title"] = "Home Page";
}

<div class="delivery-info">
   <img src="@Url.Content("~/images/Constructor.png")" alt="Logo"/>
 </div>
<p></p>
<div class="grid">
    @foreach (var item in Model)
    {
        <div class="grid-item">
            <img src="@item.ImageUrl" alt="Product Image"/>
            <div class="grid-item-details">
                <h3>@item.Name</h3>
                <p>@item.Description</p>
                <span>@item.Price</span>
            </div>
        </div>
    }
</div>

<style>
    .grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin: -15px;
    }

    .grid-item {
        box-sizing: border-box;
        padding: 15px;
        width: calc(25% - 30px);
    }

        .grid-item img {
            max-width: 100%;
        }

    .grid-item-details h3 {
        margin-top: 0;
    }

    .grid-item-details p {
        margin-bottom: 0;
    }

    .delivery-info {
        color: #ff5201;
        font-size: 24px;
        background-color: #f8f8f8;
        padding: 20px;
        margin-top: 20px;
        text-align: center;
    }

    .delivery-info img {
  max-width: 100%;
  height: auto;
}

        .delivery-info h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .delivery-info p {
            font-size: 18px;
            line-height: 1.5;
            margin-bottom: 10px;
        }

</style>
