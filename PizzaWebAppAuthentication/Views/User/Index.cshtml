@model PizzaWebAppAuthentication.Models.ViewModels.UserManagementViewModels.UsersListViewModel

<partial name = "~/Views/Role/_Menu.cshtml" />

<div class="col md-9">
    <div class="row">

        <form method="get">
            <div class="form-inline">
                <label asp-for="Role">Role: </label>
                <select asp-for="SelectedRole" asp-items="Model.Role" class="selectpicker"><option value="">All</option></select>
                

                <label asp-for="FirstName">Name: </label>
                <select asp-for="SelectedFirstName" asp-items="Model.FirstName" class="selectpicker"><option value="">All</option></select>
                

                <label asp-for="Email">Email:</label>
                <select asp-for="SelectedEmail" asp-items="Model.Email" class="selectpicker"><option value="">All</option></select>
                

                <input type="submit" value="Фильтр" class="btn btn-danger" />
            </div>
        </form>
    </div>


        <h1>Users</h1>
        
       <table class=" table">
          <thead>
              <tr>
                  <th> Id </th>
                  <th> First Name </th>
                  <th> Last Name</th>
                  <th> Email </th>
                  <th> Phone </th>
                  <th>  </th>
              </tr>
          </thead>  
          <tbody>
                @foreach (var user in Model.Users)
                {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.FirstName </td>
                            <td>@user.LastName </td>
                            <td>@user.Email </td>
                            <td>@user.PhoneNumber</td>
                            <td> <a href="User/Details/@user.Id">Details</a> </td>
                        </tr>
                }
          </tbody>
       </table>
    </div>
</div>

